{
  "mcpServers": {
    "playwright": {
      "command": "bunx",
      "args": [
        "@playwright/mcp@latest",
        "--browser",
        "chromium",
        "--user-data-dir",
        "./.mcp-profile",
        "--headless",
        "--isolated",
        "--no-sandbox"
      ]
    },
    "figma": {
      "command": "bunx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--stdio"
      ]
    }
  }
}